# Top-most EditorConfig file
root = true

# Default for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Kotlin
[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120

# XML (layouts, manifests, resources)
[*.xml]
indent_style = space
indent_size = 4

# Gradle
[*.gradle]
indent_style = space
indent_size = 4

# Properties
[*.properties]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Windows batch files
[*.bat]
end_of_line = crlf

# Gradle wrapper JAR (binary, no text transforms)
[gradle/wrapper/gradle-wrapper.jar]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
charset = unset
